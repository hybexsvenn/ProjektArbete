<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Riksdagskollen - @ViewBag.Title</title>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css?family=Poiret+One|Comfortaa" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link href="~/myStyleSheet.css" rel="stylesheet" />
    <link href="~/cookieSheet.css" rel="stylesheet" />
</head>
<body ng-app="myApp" ng-controller="testController" class="eupopup eupopup-top">
    <div id="wrapper" class="center-block">
        <div class="yada">
            <div class="container">
                <div class="header">
                    <a asp-controller="home" asp-action="index" style="text-decoration : none"><img src="~/Images/p-trans.gif" id="ourLogo" /><h1>Riksdagskollen</h1></a><h5>- Så närvarar våra folkvalda ledamöter vid voteringar i riksdagen</h5>
                </div>
            </div>


            <nav class="navbar navbar-inverse justified">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav">
                            <li><a asp-controller="Home" asp-action="Index">Hem</a></li>
                            <li><a asp-controller="Home" asp-action="Party">Parti</a></li>
                            <li><a asp-controller="Home" asp-action="Person">Ledamot</a></li>
                            <li><a asp-controller="Home" asp-action="Constituency">Valkrets</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a asp-controller="Home" asp-action="FAQ"><span class="glyphicon glyphicon-pencil"></span> FAQ</a></li>
                            <li><a asp-controller="Home" asp-action="ContactUS"><span class="glyphicon glyphicon-envelope"></span> Kontakta Oss</a></li>

                        </ul>
                    </div>
                </div>
            </nav>
            <div>
                <div class="container body-content">
                    @RenderBody()
                </div>
                <hr />
                <div class="container">
                    <footer>
                        <div id="rightContent" class="col-sm-4"><p>Senast uppdaterad: 2017-09-15 <br />Epost: info[a]riksdagskollen.se</p></div>
                        <div id="footerRight">Beta version 0.4</div>
                    </footer>
                </div>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
        <script src="~/angular.js"></script>

        @RenderSection("Scripts", false)
        <script src="~/myScript.js"></script>
        <script src="~/cookie.js"></script>
    </div>
</body>
</html>
