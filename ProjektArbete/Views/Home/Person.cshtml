@model PersonVM[]
<div class="input-group">
    <input ng-model="search" type="text" class="form-control" placeholder="Sök politiker...">
    <div class="input-group-btn" onload="Foo()">
        <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
        </button>
    </div>
</div>



<br /><br />
<ul class="dropDownContent">
    <li ng-repeat="item in listOfSearch | filter: search track by $index">
        <a href="/Home/Person/{{item.Id}}" ng-click="selectedPerson(item.Id)">{{item.person}}</a>
    </li>
</ul>




@section Scripts
    {
    <script src="~/person.js"></script>
}












